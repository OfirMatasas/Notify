    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Color x:Key="PrimaryColor">#212121</Color>
    <Color x:Key="PrimaryDarkColor">#1A1A1A</Color>
    <Color x:Key="AccentColor">#252A34</Color>

    <!--  App Theme Light  -->
    <Color x:Key="LightPrimaryTextColor">#212121</Color>
    <Color x:Key="LightSecondaryTextColor">#757575</Color>
    <Color x:Key="LightButtonColor">#71C9CE</Color>
    <Color x:Key="LightPlaceholderTextColor">WhiteSmoke</Color>
    <Color x:Key="LightButtonTextColor">#252A34</Color>
    <Color x:Key="LightEntryBackgroundColor">#B7C4CF</Color>
    <Color x:Key="LightPageBackgroundColor">#DBE2EF</Color>
    <Color x:Key="LightTabBarBackgroundColor">#3282B8</Color>

    <!--  App Theme Dark  -->
    <Color x:Key="DarkPrimaryTextColor">#F5F5F5</Color>
    <Color x:Key="DarkSecondaryTextColor">#DBE2EF</Color>
    <Color x:Key="DarkPlaceholderTextColor">#757575</Color>
