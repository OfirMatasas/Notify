<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    BindingContext="{Binding AccountSettingsPage, Source={StaticResource ViewModelLocator}}"
    NavigationPage.HasNavigationBar="False"
    x:Class="Notify.Views.LocationSettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:materialDesignControls1="clr-namespace:Plugin.MaterialDesignControls;assembly=Plugin.MaterialDesignControls"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <Grid BackgroundColor="{AppThemeBinding Light={StaticResource LightPageBackgroundColor}, Dark={StaticResource DarkPageBackgroundColor}}" RowDefinitions="Auto, Auto, Auto, *">
            <StackLayout Grid.Row="0" Margin="40">
                <Label
                    FontSize="Large"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource Body1FontSize_ExoBold}"
                    Text="Location Settings" />
            </StackLayout>
            <StackLayout Margin="0,30,350,0">
                <ImageButton
                    Aspect="AspectFit"
                    BackgroundColor="Transparent"
                    Command="{Binding BackCommand}"
                    Source="backButton.png" />
            </StackLayout>
            <StackLayout Margin="20,200,20,0">
                <materialDesignControls1:MaterialPicker
                    FontSize="16"
                    ItemsSource="{Binding LocationSelectionList}"
                    Placeholder="Select destination"
                    SelectedItem="{Binding SelectedLocation}"
                    Type="Filled" />
                <materialDesignControls1:MaterialEntry
                    BackgroundColor="White"
                    BorderColor="Transparent"
                    FontSize="16"
                    MaxLength="100"
                    Placeholder="Enter Address"
                    ReturnType="Next"
                    TabIndex="1"
                    Text="{Binding SearchAddress}"
                    TextColor="Black"
                    Type="Filled" />
                <materialDesignControls1:MaterialPicker 
                    Placeholder="Suggestions"
                    FontSize="16"
                    Type="Filled"
                    SelectedItem="{Binding SelectedAddress}">
                    <materialDesignControls1:MaterialPicker.ItemsSource>
                        <Binding Path="DropBoxOptions" />
                    </materialDesignControls1:MaterialPicker.ItemsSource>
                </materialDesignControls1:MaterialPicker>
                <Button
                    BackgroundColor="#393E46"
                    Command="{Binding GetAddressSuggestionsCommand}"
                    CornerRadius="30"
                    Text="GET ADDRESS SUGGESTIONS"
                    TextColor="#EEEEEE">
                </Button>
                <Button
                    BackgroundColor="#393E46"
                    Command="{Binding GetGeographicCoordinatesCommand}"
                    CornerRadius="30"
                    Text="GET GEOGRAPHIC COORDINATES"
                    TextColor="#EEEEEE">
                </Button>
                <Button
                    BackgroundColor="#393E46"
                    Command="{Binding GetCurrentLocationCommand}"
                    CornerRadius="30"
                    Text="GET CURRENT LOCATION"
                    TextColor="#EEEEEE">
                </Button>
                <Button
                    BackgroundColor="#393E46"
                    Command="{Binding UpdateLocationCommand}"
                    CornerRadius="30"
                    Text="UPDATE LOCATION"
                    TextColor="#EEEEEE" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
