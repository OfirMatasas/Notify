<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    Title="Notification Creation"
    x:Class="Notify.Views.NotificationsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:pancakeView="clr-namespace:Xamarin.Forms.PancakeView;assembly=Xamarin.Forms.PancakeView"
    xmlns:views="http://xamarin.com/schemas/2020/toolkit"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <RefreshView Command="{Binding RefreshNotificationsCommand}" IsRefreshing="{Binding IsRefreshing}">
        <Grid
            BackgroundColor="#F3F5F9"
            HorizontalOptions="FillAndExpand"
            RowSpacing="0"
            VerticalOptions="FillAndExpand">
            <Grid.RowDefinitions>
                <RowDefinition Height="180" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid
                BackgroundColor="#455399"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand">
                <StackLayout
                    HorizontalOptions="Center"
                    Margin="0,-40,0,0"
                    VerticalOptions="Center">
                    <Label
                        FontSize="40"
                        HorizontalTextAlignment="Center"
                        TextColor="White">
                        <Label.FormattedText>
                            <FormattedString>
                                <FormattedString.Spans>
                                    <Span
                                        FontAttributes="Bold"
                                        FontSize="40"
                                        Text=".NET " />
                                    <Span Text="Conf" />
                                </FormattedString.Spans>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                    <Label
                        FontSize="15"
                        HorizontalTextAlignment="Center"
                        Margin="0,-10,0,0"
                        Text="'Focusing on Xamarin'"
                        TextColor="White" />
                </StackLayout>
            </Grid>
            <pancakeView:PancakeView
                Grid.Row="1"
                HeightRequest="80"
                HorizontalOptions="Center"
                Margin="0,-40,0,0">
                <Grid ColumnSpacing="0" HorizontalOptions="FillAndExpand">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <BoxView
                        BackgroundColor="#00C6AE"
                        Grid.RowSpan="2"
                        WidthRequest="80" />
                    <BoxView
                        BackgroundColor="White"
                        Grid.Column="1"
                        Grid.RowSpan="2"
                        WidthRequest="80" />
                    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label
                            FontSize="36"
                            HorizontalOptions="Center"
                            Text="23"
                            TextColor="White" />
                        <Label
                            FontSize="12"
                            HorizontalOptions="Center"
                            Margin="0,-10,0,0"
                            Text="MARCH"
                            TextColor="White" />
                    </StackLayout>
                    <StackLayout
                        Grid.Column="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        <Label
                            FontSize="36"
                            HorizontalOptions="Center"
                            Text="28"
                            TextColor="#455399" />
                        <Label
                            FontSize="12"
                            HorizontalOptions="Center"
                            Margin="0,-10,0,0"
                            Text="MARCH"
                            TextColor="#455399" />
                    </StackLayout>
                    <BoxView
                        BackgroundColor="#F1F3F7"
                        Grid.ColumnSpan="2"
                        Grid.Row="1"
                        HeightRequest="1"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        WidthRequest="73" />
                    <pancakeView:PancakeView
                        CornerRadius="3.5"
                        Grid.Row="1"
                        HeightRequest="7"
                        HorizontalOptions="Center"
                        Margin="7"
                        VerticalOptions="Center"
                        WidthRequest="7" />
                    <pancakeView:PancakeView
                        BackgroundColor="#C9D6EF"
                        CornerRadius="3.5"
                        Grid.Column="1"
                        Grid.Row="1"
                        HeightRequest="7"
                        HorizontalOptions="Center"
                        Margin="7"
                        VerticalOptions="Center"
                        WidthRequest="7" />
                </Grid>
            </pancakeView:PancakeView>
            <CollectionView
                Grid.Row="2"
                HorizontalOptions="FillAndExpand"
                ItemsSource="{Binding Notifications}"
                Margin="25"
                SelectionMode="None"
                VerticalOptions="FillAndExpand">
                <CollectionView.Header>
                    <Label
                        FontSize="18"
                        Text="Notifications"
                        TextColor="Black" />
                </CollectionView.Header>
                <CollectionView.ItemsLayout>
                    <LinearItemsLayout ItemSpacing="20" Orientation="Vertical" />
                </CollectionView.ItemsLayout>
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <pancakeView:PancakeView
                            BackgroundColor="White"
                            HorizontalOptions="FillAndExpand"
                            VerticalOptions="StartAndExpand">
                            <Grid HorizontalOptions="FillAndExpand" VerticalOptions="StartAndExpand">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <BoxView
                                    BackgroundColor="Coral"
                                    HorizontalOptions="Start"
                                    VerticalOptions="FillAndExpand"
                                    WidthRequest="3" />
                                <views:Expander Grid.Column="1">
                                    <views:Expander.Header>
                                        <Grid HorizontalOptions="FillAndExpand">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="3.5*" />
                                            </Grid.ColumnDefinitions>
                                            <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                                                <Label
                                                    FontAttributes="Bold"
                                                    FontSize="Small"
                                                    HorizontalOptions="Center"
                                                    Text="{Binding Type}"
                                                    TextColor="Black" />
                                            </StackLayout>
                                            <BoxView
                                                BackgroundColor="#F2F4F8"
                                                Grid.Column="1"
                                                HorizontalOptions="Start"
                                                VerticalOptions="FillAndExpand"
                                                WidthRequest="1" />
                                            <StackLayout
                                                Grid.Column="2"
                                                HorizontalOptions="Start"
                                                Margin="20"
                                                VerticalOptions="Center">
                                                <Label
                                                    FontSize="15"
                                                    Text="{Binding Name}"
                                                    TextColor="Black" />
                                                <Label
                                                    FontSize="12"
                                                    Margin="0,-10,0,0"
                                                    Text="{Binding Description}"
                                                    TextColor="#2F3246" />
                                            </StackLayout>
                                        </Grid>
                                    </views:Expander.Header>
                                    <Grid HorizontalOptions="FillAndExpand">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="3.5*" />
                                        </Grid.ColumnDefinitions>
                                        <BoxView
                                            BackgroundColor="#F2F4F8"
                                            Grid.Column="1"
                                            HorizontalOptions="Start"
                                            VerticalOptions="FillAndExpand"
                                            WidthRequest="1" />
                                        <StackLayout Grid.Column="2" Spacing="10">
                                            <Label
                                                FontSize="10"
                                                Margin="20,0"
                                                Opacity="0.5"
                                                Text="{Binding Status}"
                                                TextColor="Black" />
                                            <StackLayout
                                                BindableLayout.ItemsSource="{Binding Notifications}"
                                                HorizontalOptions="Start"
                                                Margin="20,0,0,20"
                                                VerticalOptions="Center">
                                                <BindableLayout.ItemTemplate>
                                                    <DataTemplate>
                                                        <Label FontSize="12" TextColor="#2F3246">
                                                            <Label.FormattedText>
                                                                <FormattedString>
                                                                    <FormattedString.Spans>
                                                                        <Span Text="{Binding Status}" />
                                                                        <Span Text=" - " />
                                                                        <Span FontAttributes="Bold" Text="{Binding Status}" />
                                                                    </FormattedString.Spans>
                                                                </FormattedString>
                                                            </Label.FormattedText>
                                                        </Label>
                                                    </DataTemplate>
                                                </BindableLayout.ItemTemplate>
                                            </StackLayout>
                                        </StackLayout>
                                    </Grid>
                                </views:Expander>
                            </Grid>
                        </pancakeView:PancakeView>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>
    </RefreshView>
</ContentPage>
