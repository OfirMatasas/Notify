<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    BindingContext="{Binding ProfilePage, Source={StaticResource ViewModelLocator}}"
    NavigationPage.HasNavigationBar="True"
    x:Class="Notify.Views.ProfilePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <Grid BackgroundColor="{AppThemeBinding Light={StaticResource LightPageBackgroundColor}, Dark={StaticResource DarkPageBackgroundColor}}" RowDefinitions="Auto, Auto, Auto, *">
            <StackLayout Grid.Row="0" Margin="40">
                <Label
                    FontSize="Large"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource Body1FontSize_ExoBold}"
                    Text="Profile Page" />
                <Image
                    HeightRequest="100"
                    Margin="20"
                    Source="Notify.png"
                    WidthRequest="100" />
            </StackLayout>
            <StackLayout Margin="0,30,300,0">
                <ImageButton
                    Aspect="AspectFit"
                    BackgroundColor="Transparent"
                    Command="{Binding GoSettingsPageCommand}"
                    Source="settings.png" />
            </StackLayout>
            <StackLayout Margin="0,300,0,0">
                <Frame
                    BackgroundColor="Blue"
                    HeightRequest="100"
                    WidthRequest="50">
                    <Label Text="Future reminders here" TextColor="White" />
                </Frame>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>