<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    NavigationPage.HasNavigationBar="True"
    x:Class="Notify.Views.ProfilePage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:views="http://xamarin.com/schemas/2020/toolkit"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <Grid RowDefinitions="*, 2*, Auto">
        <BoxView Grid.RowSpan="3">
            <BoxView.Background>
                <LinearGradientBrush>
                    <GradientStopCollection>
                        <GradientStop Color="#161616" Offset="0" />
                        <GradientStop Color="#30343F" Offset="1" />
                    </GradientStopCollection>
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>
        <Grid>
            <Path
                Aspect="Fill"
                Data="M0,0H375V262.033s-9.025,4.813-55.426-10.71-70.141-83.047-130.3-83.22-83.544,67.7-130.893,83.22S0,262.033,0,262.033Z"
                Fill="#FFBE00" />
            <Image
                HeightRequest="20"
                HorizontalOptions="Start"
                Margin="25"
                Source="menu.png"
                VerticalOptions="Start"
                WidthRequest="20" />
        </Grid>
        <StackLayout
            Grid.Row="1"
            HorizontalOptions="Center"
            Margin="0,-140,0,0"
            Spacing="30">
            <Frame
                BackgroundColor="Transparent"
                BorderColor="White"
                CornerRadius="105"
                Grid.Row="1"
                HeightRequest="210"
                HorizontalOptions="Center"
                IsClippedToBounds="True"
                Padding="0"
                VerticalOptions="Center"
                WidthRequest="210">
                <Image
                    Aspect="AspectFill"
                    HorizontalOptions="FillAndExpand"
                    Source="ofir_profile_image.jpg"
                    VerticalOptions="FillAndExpand" />
            </Frame>
            <StackLayout HorizontalOptions="Center" Spacing="15">
                <Label
                    FontSize="18"
                    HorizontalOptions="Center"
                    Text="Hello, linkimos"
                    TextColor="White" />
            </StackLayout>
        </StackLayout>
        <StackLayout
            Grid.Row="2"
            Margin="25,0,0,25"
            Spacing="10">
            <ScrollView HorizontalScrollBarVisibility="Never" Orientation="Horizontal">
                <StackLayout
                    BindableLayout.ItemsSource="{Binding Picks}"
                    Orientation="Horizontal"
                    Spacing="30">
                    <BindableLayout.ItemTemplate>
                        <DataTemplate>
                            <Grid ColumnDefinitions="Auto, Auto" ColumnSpacing="15">
                                <Rectangle
                                    Fill="#A5A5A5"
                                    HeightRequest="40"
                                    VerticalOptions="Center"
                                    WidthRequest="87" />
                                <Image
                                    HeightRequest="75"
                                    HorizontalOptions="Center"
                                    Source="{Binding Image}"
                                    VerticalOptions="Center"
                                    WidthRequest="75" />
                                <StackLayout
                                    Grid.Column="1"
                                    Spacing="5"
                                    WidthRequest="115">
                                    <Label
                                        FontAttributes="Bold"
                                        FontSize="12"
                                        Text="{Binding Title}"
                                        TextColor="White" />
                                    <Label
                                        FontSize="10"
                                        Text="{Binding Description}"
                                        TextColor="White" />
                                </StackLayout>
                            </Grid>
                        </DataTemplate>
                    </BindableLayout.ItemTemplate>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </Grid>
</ContentPage>