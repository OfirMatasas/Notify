<?xml version="1.0" encoding="utf-8" ?>

<ContentPage
    x:Class="Notify.Views.Views.NotificationDetailsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <ContentPage.Content>
        <StackLayout>
            <Grid Column="1">
                <Label
                    FontAttributes="Bold"
                    FontSize="Large"
                    Grid.Column="0"
                    HorizontalTextAlignment="Center"
                    Text="Notification Details"
                    TextColor="Black" />
                <Image
                    Aspect="AspectFit"
                    BackgroundColor="Black"
                    Grid.Column="0"
                    HeightRequest="50"
                    HorizontalOptions="Start"
                    Source="back.png">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding BackCommand}" />
                    </Image.GestureRecognizers>
                </Image>
            </Grid>

            <Grid
                Column="2"
                ColumnDefinitions="auto, auto"
                RowDefinitions="auto">
                <Label
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Grid.Column="0"
                    Grid.Row="0"
                    Text="Notification name:"
                    TextColor="Black" />
                <Label
                    FontSize="Medium"
                    Grid.Column="1"
                    Grid.Row="0"
                    Text="{Binding Name}"
                    TextColor="Black" />

                <Label
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Grid.Column="0"
                    Grid.Row="1"
                    Text="Description:"
                    TextColor="Black" />
                <Label
                    FontSize="Medium"
                    Grid.Column="1"
                    Grid.Row="1"
                    Text="{Binding Description}"
                    TextColor="Black" />

                <Label
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Grid.Column="0"
                    Grid.Row="2"
                    Text="Status:"
                    TextColor="Black" />
                <Label
                    FontSize="Medium"
                    Grid.Column="1"
                    Grid.Row="2"
                    Text="{Binding Status}" />

                <Label
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Grid.Column="0"
                    Grid.Row="3"
                    Text="Creator:"
                    TextColor="Black" />
                <Label
                    FontSize="Medium"
                    Grid.Column="1"
                    Grid.Row="3"
                    Text="{Binding Creator}"
                    TextColor="Black" />

                <Label
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Grid.Column="0"
                    Grid.Row="4"
                    Text="Creation date:"
                    TextColor="Black" />
                <Label
                    FontSize="Medium"
                    Grid.Column="1"
                    Grid.Row="4"
                    Text="{Binding CreationDateTime}"
                    TextColor="Black" />

                <Label
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Grid.Column="0"
                    Grid.Row="5"
                    Text="Type:"
                    TextColor="Black" />
                <Label
                    FontSize="Medium"
                    Grid.Column="1"
                    Grid.Row="5"
                    Text="{Binding Type}"
                    TextColor="Black" />

                <Label
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Grid.Column="0"
                    Grid.Row="6"
                    Text="Type info:"
                    TextColor="Black" />
                <Label
                    FontSize="Medium"
                    Grid.Column="1"
                    Grid.Row="6"
                    Text="{Binding TypeInfo}"
                    TextColor="Black" />

                <Label
                    FontAttributes="Bold"
                    FontSize="Medium"
                    Grid.Column="0"
                    Grid.Row="7"
                    Text="Target user:"
                    TextColor="Black" />
                <Label
                    FontSize="Medium"
                    Grid.Column="1"
                    Grid.Row="7"
                    Text="{Binding Target}"
                    TextColor="Black" />
            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>
