<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    NavigationPage.HasNavigationBar="False"
    x:Class="Notify.Views.WifiSettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:materialDesignControls="clr-namespace:Plugin.MaterialDesignControls;assembly=Plugin.MaterialDesignControls"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <Grid RowDefinitions="Auto, Auto, Auto, Auto, Auto, Auto, Auto, Auto, *, Auto">

            <BoxView Grid.RowSpan="10">
                <BoxView.Background>
                    <LinearGradientBrush>
                        <GradientStopCollection>
                            <GradientStop Color="{AppThemeBinding Dark={StaticResource DarkPageBackgroundColor}, Light={StaticResource LightPageBackgroundColor}}" Offset="0" />
                            <GradientStop Color="{AppThemeBinding Dark={StaticResource DarkButtonTextColor}, Light={StaticResource LightEntryBackgroundColor}}" Offset="0.4" />
                        </GradientStopCollection>
                    </LinearGradientBrush>
                </BoxView.Background>
            </BoxView>

            <Button
                Background="Transparent"
                BackgroundColor="Transparent"
                Command="{Binding BackCommand}"
                FontAttributes="Bold"
                FontSize="Title"
                Grid.Row="0"
                HorizontalOptions="Start"
                Margin="-20,0,0,0"
                Text="❮"
                TextColor="{AppThemeBinding Light={StaticResource DarkButtonTextColor},
                                            Dark={StaticResource LightEntryBackgroundColor}}"
                VerticalOptions="Start" />

            <Label
                FontAttributes="Bold"
                FontSize="Title"
                Grid.Row="1"
                HorizontalTextAlignment="Center"
                Style="{StaticResource Body1FontSize_ExoBold}"
                Text="Wi-Fi Settings"
                VerticalTextAlignment="Center" />

            <materialDesignControls:MaterialPicker
                BackgroundColor="White"
                CornerRadius="10"
                Grid.Row="2"
                ItemsSource="{Binding WiFiSelectionList}"
                LabelSize="16"
                LabelText="Select Wi-Fi"
                LabelTextColor="{AppThemeBinding Light={StaticResource DarkButtonTextColor},
                                                 Dark={StaticResource LightEntryBackgroundColor}}"
                Margin="30,60,30,0"
                Placeholder="Select Wi-Fi"
                SelectedItem="{Binding SelectedWiFiSSID}" />

            <materialDesignControls:MaterialPicker
                BackgroundColor="White"
                CornerRadius="10"
                Grid.Row="3"
                ItemsSource="{Binding LocationSelectionList}"
                LabelSize="16"
                LabelText="Select Location"
                LabelTextColor="{AppThemeBinding Light={StaticResource DarkButtonTextColor},
                                                 Dark={StaticResource LightEntryBackgroundColor}}"
                Margin="30,20,30,0"
                Placeholder="Select Location"
                SelectedItem="{Binding SelectedLocation}" />

            <Button
                BackgroundColor="{AppThemeBinding Light={StaticResource LightButtonColor},
                                                  Dark={StaticResource DarkButtonColor}}"
                Command="{Binding UpdateWifiSettingsCommand}"
                CornerRadius="30"
                Grid.Row="9"
                Margin="50,0,50,20"
                Text="UPDATE Wi-Fi"
                TextColor="{AppThemeBinding Light={StaticResource DarkButtonTextColor},
                                            Dark={StaticResource LightEntryBackgroundColor}}" />
        </Grid>
    </ContentPage.Content>
</ContentPage>
