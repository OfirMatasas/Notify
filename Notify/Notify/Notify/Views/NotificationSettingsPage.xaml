<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    NavigationPage.HasNavigationBar="False"
    x:Class="Notify.Views.NotificationSettingsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">
    <ContentPage.Content>
        <Grid BackgroundColor="{AppThemeBinding Light={StaticResource LightPageBackgroundColor}, Dark={StaticResource DarkPageBackgroundColor}}" RowDefinitions="Auto, Auto, Auto, *">
            <StackLayout Grid.Row="0" Margin="40">
                <Label
                    FontSize="Large"
                    HorizontalTextAlignment="Center"
                    Style="{StaticResource Body1FontSize_ExoBold}"
                    Text="Notification Settings" />
            </StackLayout>
            <StackLayout Margin="0,30,350,0">
                <ImageButton
                    Aspect="AspectFit"
                    BackgroundColor="Transparent"
                    Command="{Binding backCommand}"
                    Source="backButton.png" />
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
